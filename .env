# 运行环境 (development, production, test)
RUN_ENV=development

# 服务器配置
APP_SERVER__HOST=0.0.0.0
APP_SERVER__PORT=8080

# Database
DATABASE_URL=sqlite://data/sunbay_softpos.db
APP_DATABASE__URL=sqlite://data/sunbay_softpos.db
APP_DATABASE__MAX_CONNECTIONS=10

# Redis配置
APP_REDIS__URL=redis://localhost:6379

# JWT配置
# 重要：生产环境必须使用强密钥（至少32字符）
APP_JWT__SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
APP_JWT__EXPIRATION_HOURS=2
APP_JWT__REFRESH_EXPIRATION_DAYS=7

# HSM配置
APP_HSM__BASE_URL=https://hsm.futurex.com
APP_HSM__API_KEY=your-hsm-api-key
APP_HSM__TIMEOUT_SECONDS=30

# 日志配置
APP_LOGGING__LEVEL=info
APP_LOGGING__FORMAT=json

# 速率限制配置
APP_RATE_LIMIT__REQUESTS_PER_SECOND=100
APP_RATE_LIMIT__BURST_SIZE=200

# 安全配置
APP_SECURITY__BDK=0123456789ABCDEFFEDCBA9876543210
